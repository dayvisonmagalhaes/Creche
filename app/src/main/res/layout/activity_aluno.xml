<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="br.com.creche.activity.AlunoActivity">

    <include android:id="@+id/toolbarprofessor"
        layout="@layout/toolbarprofessorsair"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_pagina"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"    >


    </android.support.v4.view.ViewPager>

    <br.com.creche.helper.SlidingTabLayout
        android:id="@+id/stl_tabs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorBotaoNormal">

    </br.com.creche.helper.SlidingTabLayout>

</LinearLayout>
